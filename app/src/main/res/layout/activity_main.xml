<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="2"
              android:orientation="vertical"
              android:background="@mipmap/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/pick_photo"
            android:layout_width="172dp"
            android:layout_height="120dp"
            android:layout_centerVertical = "true"
            android:layout_centerHorizontal = "true"
            android:drawableTop="@mipmap/beauty"
            android:gravity="bottom"
            android:padding="16dp"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:background="@xml/pick_photo_background"
            android:text="@string/pick_photo"/>
    </RelativeLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/take_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@mipmap/camera"
                android:paddingTop="16dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_centerVertical = "true"
                android:layout_centerHorizontal = "true"
                android:layout_marginTop="80dp"
                android:text="@string/take_photo"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:background="@xml/take_photo_background"/>
        </LinearLayout>


</LinearLayout>
